##########################
##########################
## Ansible Linter rules ##
##########################
##########################

profile: null # min, basic, moderate,safety, shared, production

#############################
# Exclude paths from linter #
#############################
#exclude_paths:

########################
# Make output parsable #
########################
parseable: true

#######################
# Set output to quiet #
#######################
# quiet: true

#####################
# Path to rules dir #
#####################
#rulesdir:

################
# Tags to skip #
################
#skip_list:

##################
# Tags to follow #
##################
#tags:

#############
# Use rules #
#############
use_default_rules: true

#################
# Set verbosity #
#################
verbosity: 1
